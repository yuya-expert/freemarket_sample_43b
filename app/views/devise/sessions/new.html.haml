.main-content
  = render 'registrations/head'
  .main-content__main-log
    .main-content__main-log-all
      .main-content__main-log-all-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to '新規会員登録', new_user_registration_path, class: 'link-signin'
      .main-content__main-log-all-login
        %button.facebook
          %i.fab.fa-facebook.fa-pull-left
          = link_to "Facebookでログイン", user_facebook_omniauth_authorize_path, class: 'facebook-link'
        %button.google
          %i.fab.fa-google-plus-g.fa-pull-left
          = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, class: 'google-link'
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-login
          .form-login-email
            = f.email_field :email, {class: "login-email", placeholder: "メールアドレス"}
          .form-login-password
            = f.password_field :password, {class: "login-password", placeholder: "パスワード"}
          .form-login-no-robot
            = recaptcha_tags
          = f.button "ログイン", {class: "login-submit"}
          =link_to 'パスワードをお忘れの方','https://www.mercari.com/jp/password/reset/start/',class: 'forget-password'
  = render 'registrations/footer'
