.main-content
  = render 'head'
  .main-content__main-log
    .main-content__main-log-all
      .main-content__main-log-all-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to '新規会員登録', 'https://www.mercari.com/jp/signup/',class: 'link-signin'
      .main-content__main-log-all-login
        %button.facebook
          %i.fab.fa-facebook.fa-pull-left
          Facebookでログイン
        %button.google
          %i.fab.fa-google-plus-g.fa-pull-left
          Googleでログイン
      %form{:action => "https://www.mercari.com/jp/login/", :method => "#", :novalidate => "#"}
        .form-login
          .form-login-email
            %input.login-email{:name => "email", :placeholder => "メールアドレス", :type => "email", :value => ""}/
          .form-login-password
            %input.login-password{:name => "password", :placeholder => "パスワード", :type => "password", :value => ""}/
          .form-login-no-robot
            .form-login-no-robot-recaptcha{"data-sitekey" => "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}
