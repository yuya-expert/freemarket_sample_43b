.content
  .content-title
    = "#{brand.list} 新着アイテム"
  .items
    - count = 0
    - @products.each do |product|
      - unless count >= 4
        - if product.brand_id == brand.id
          = link_to detail_product_path(product) do
            .item
              = image_tag @product.images.first.image if @product.images.first.image
              = image_tag("rikishi.png") if @product.images.first.image.nil?
              .title
                = product.name
              .price
                = product.price
              .tax (税込)
          - count += 1
  .show-all-items
    = link_to("すべての商品を見る", "#", {class: "no-line"})
