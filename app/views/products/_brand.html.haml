.content
  .content-title
    = "#{brand.list} 新着アイテム"
  .items
    - count = 0
    - @products.each do |product|
      - unless count >= 4
        = link_to detail_product_path(product) do
          .item
            = image_tag("rikishi.png")
            .title
              = product.name
            .price
              = product.price
            .tax (税込)
        - count += 1
  .show-all-items
    = link_to("すべての商品を見る", "#")
